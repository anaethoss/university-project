<% include partials/header %>


  <div class="app-canvas">
    <div class="container">
      <div class="breadcrumb">
        <ul>
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/recent">Recent</a>
          </li>
        </ul>
      </div>


      <header class="heading text-bold">
        <h2>Search Result for: "
          <%= query %> "
        </h2>
      </header>


      <div class="listing-actions text-right clearfix" data-target="#items-listing-area">
        <div class="inner">

          <div class="layout-action">
            <a href="#">
              <i class="fa fa-bars"></i>
              <span class="tooltip">List layout</span>
            </a>
            <a href="#" class="active">
              <i class="fa fa-th"></i>
              <span class="tooltip">Grid layout</span>
            </a>
          </div>
        </div>
      </div>

      <div class="listing-area clearfix">
        <div class="listing-filters">
          <div class="listing-filter-block">
            <header>
              <h6>All Categories</h6>
              <a class="trigger-filter-block" href="#">
                <i class="fa fa-navicon"></i>
              </a>
            </header>

            <div class="inner">

              <div class="filter-options-widget">
                <ul>
                  <li class="active">
                    <a href="#">
                      <i></i>
                      <span>All Books</span>
                    </a>
                  </li>
                  <% books.forEach(book => { %>
                    <li>
                      <a href="/categories/<%= book._id %>">
                        <i></i>
                        <span>
                          <%= book.category %>
                        </span>
                      </a>
                    </li>
                    <% }); %>



                </ul>
              </div>
            </div>
          </div>

        </div>


        <div id="items-listing-area" class="items-list">
          <% books.forEach(book => { %>

            <article class="item-spot">
              <a href="/single-book/<%= book._id %>" class="imgAsBg">
                <img src="<%= book.photo %>" alt="<%= book.title %>">
              </a>
              <div class="item-content">
                <header>
                  <h4>
                    <a href="/single-book/<%= book._id %>">
                      <%= book.title %>
                    </a>
                  </h4>
                  <div class="breadcrumb">
                    <ul>
                      <li>
                        <a href="#">
                          <i class="fa fa-tags"></i>
                          <%= book.category %>
                        </a>
                      </li>
                      <li>
                        <i class="fa fa-clock-o"></i>
                        <%= book.createdAt.toDateString() %>
                      </li>
                    </ul>
                  </div>

                </header>

                <div class="item-actions text-center">
                  <div class="price-tag">à§³
                    <%= book.price %>
                  </div>
                </div>

                <div class="inner">
                  <p>
                    <%= book.description.split('\n')[0] + '...' %>
                  </p>
                  <a class="view-item" href="/single-book/<%= book._id %>">Read More</a>
                </div>
              </div>
            </article>

            <% }); %>

        </div>

      </div>

    </div>
  </div>

  <% include partials/footer %>