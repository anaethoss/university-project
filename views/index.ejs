<% include partials/header %>

  <div class="main-banner imgAsBg hero-banner">
    <img style="display: none;" src="/assets/img/banner.jpg" alt="dummy">
    <div class="inner">
      <div class="container">
        <header>
          <h2>Buy & Sell Used Books</h2>
          Search Books Here to find the book you want
        </header>
        <div class="category-search-tabbed">

          <div class="search-widget">
            <form action="/search" method="get" style="display: inline;">
              <input name="searchBook" type="text" placeholder="Search your book here">
              <button type="submit">
                <i class="fa fa-search"></i>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <section class="section style2">
    <div class="container">
      <header class="heading big text-center">
        <h1>Recently Added Books</h1>
      </header>

      <div class="featured-items row">
        <% for(let i = 0; i < 3; i++) { %>
          <div class="col-xs-12 col-sm-4">
            <div class="item-thumb">
              <img src="/<%= allCat[i].photo %>" alt="">
              <h3>
                <%= allCat[i].title %>
              </h3>
              <div class="basic-info">
                <span>
                  <sup>à§³</sup>
                  <%= allCat[i].price %>
                </span>
                <span class="cat bg1">
                  <%= allCat[i].category %>
                </span>
              </div>
              <a href="/single-book/<%= allCat[i]._id %>">Open details</a>
            </div>
          </div>
          <% }; %>

      </div>
  </section>


  <% include partials/footer %>